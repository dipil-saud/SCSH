<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
		<%= javascript_include_tag :defaults %>
		<title>Add Curriculum</title>
	</head>
	<body>
		<h2> Enter Curriculum Data</h2>
		<br/>
		<% form_tag({:action => 'create_curriculum'}) do %>
	    	Title &nbsp; &nbsp<%= text_field_tag :name %><br/><br/>
			Number of <br/>
			Semesters <%= text_field_tag :number, '', :size => 2 %>
			<br/><br/>
		    Taught At 	 &nbsp; &nbsp<%= text_field_tag :hasSchool %><br/><br/>
			
	    <div id = "Courses" >
			<%= button_to_remote "Add Courses",
                                  :update => 'Courses',
                                  :url => { :action => "add_courses"},
                                  :with => "'number='+$F('number')"
            %>			                             
		</div>	

		<% end -%>
	    
		
		
				
	</body>
</html>
