<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
		
		<%= javascript_include_tag :defaults %>
		<title>Add a Course</title>
	</head>
	<body>
		<h2> Enter Course Data</h2>
		<% form_for :coursemodel, @course, :url => { :action => 'create', :no=>@no} do |f| %>
				    
				     <p>	    
					    <%= f.text_field  :name,
									      :style => "color:#aaa;",
									      :value => "Course Name",
									      :onfocus => "if(this.getValue()=='Course Name'){this.clear();this.style.color = '#000';}",
									      :onblur => "if(this.getValue()==''){this.setValue('Course Name');this.style.color = '#aaa';}" %>

				    </p>
					
					 <p>	    
					    <%= f.text_field  :hasSchool,
									      :style => "color:#aaa;",
									      :value => "Provided By School",
									      :onfocus => "if(this.getValue()=='Provided By School'){this.clear();this.style.color = '#000';}",
									      :onblur => "if(this.getValue()==''){this.setValue('Provided By School');this.style.color = '#aaa';}" %>

				    </p>
					
					 <p>	    
					    <%= f.text_area  :shortDesc,
									      :style => "color:#aaa;",
									      :value => "Short Description",
									      :onfocus => "if(this.getValue()=='Short Description'){this.clear();this.style.color = '#000';}",
									      :onblur => "if(this.getValue()==''){this.setValue('Short Description');this.style.color = '#aaa';}" %>

				    </p>
					
					 <p>	    
					    <%= f.text_field  :publisher,
									      :style => "color:#aaa;",
									      :value => "Course Publisher",
									      :onfocus => "if(this.getValue()=='Course Publisher'){this.clear();this.style.color = '#000';}",
									      :onblur => "if(this.getValue()==''){this.setValue('Course Publisher');this.style.color = '#aaa';}" %>

				    </p>
					
					 <p>	    
					    <%= f.text_field  :uploader,
									      :style => "color:#aaa;",
									      :value => "Course Uploader",
									      :onfocus => "if(this.getValue()=='Course Uploader'){this.clear();this.style.color = '#000';}",
									      :onblur => "if(this.getValue()==''){this.setValue('Course Uploader');this.style.color = '#aaa';}" %>

				    </p>
					
					<p>	    
					    <%= f.text_field  :issued,
									      :style => "color:#aaa;",
									      :value => "Issued Date YYYY-MM-DD",
									      :onfocus => "if(this.getValue()=='Issued Date YYYY-MM-DD'){this.clear();this.style.color = '#000';}",
									      :onblur => "if(this.getValue()==''){this.setValue('Issued Date YYYY-MM-DD');this.style.color = '#aaa';}" %>

				    </p>
					
					<p>	    
					    <%= f.text_field  :modified,
									      :style => "color:#aaa;",
									      :value => "Modified Date YYYY-MM-DD",
									      :onfocus => "if(this.getValue()=='Modified Date YYYY-MM-DD'){this.clear();this.style.color = '#000';}",
									      :onblur => "if(this.getValue()==''){this.setValue('Modified Date YYYY-MM-DD');this.style.color = '#aaa';}" %>

				    </p>				
					
					 
					<% 1.upto(@no) do |num| -%>
					
					<p>	    
					    <%= f.text_field  "references#{num}",
									      :style => "color:#aaa;",
									      :value => "Reference #{num}",
									      :onfocus => "if(this.getValue()=='Reference #{num}'){this.clear();this.style.color = '#000';}",
									      :onblur => "if(this.getValue()==''){this.setValue('Reference #{num}');this.style.color = '#aaa';}" %>

				    </p>				
					
					<% end -%>

					<% @no = @no+1 -%>
					<%= button_to "Add Reference",:action => 'new' , :no => @no %>
					
					
					
					  <br/> <br/>
				      <%= f.submit 'Add' %>
				    </p>
				<% end %>

	</body>
</html>
